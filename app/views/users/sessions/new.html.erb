				<a href="/"><div class="logo-center"><img src="/images/logo.png"></div></a>
					
					<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.text_field :email, autofocus: true, placeholder: "Your Email" %>
            </div>
          
            <div class="field">
              <%= f.password_field :password, autocomplete: "off", placeholder: "Enter your Password" %>
            </div>
          
            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>
          
            <div class="actions">
              <%= f.submit "Login", class: "login loginmodal-submit" %>
            </div>
          <% end %>

          <%= render "users/shared/links" %>
	</div>
	
